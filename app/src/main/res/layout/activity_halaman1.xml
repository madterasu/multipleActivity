<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".halaman1">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ini Judulnya Ang Ang Ang"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edt_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Anything you want"
            android:inputType="text"/>

        <TextView
            android:id="@+id/tv_doyan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doyan makan ?"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/cb_bakso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bakso"/>
        <CheckBox
            android:id="@+id/cb_nasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nasi Goreng"/>
        <CheckBox
            android:id="@+id/cb_mi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mie Ayam"/>

        <TextView
            android:id="@+id/tv_sudah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sudah makan ta?"
            android:textColor="@color/black" />

        <ToggleButton
            android:id="@+id/tb_makan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Belum"
            android:textOn="Sudah"/>

        <TextView
            android:id="@+id/tv_jomblo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masih Jomblo?"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/s_jomblo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/sp_ngoding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"/>

        <TimePicker
            android:id="@+id/tp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"/>

        <DatePicker
            android:id="@+id/dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:datePickerMode="calendar"/>

        <Button
            android:id="@+id/my_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan"/>
        
        <TextView
            android:id="@+id/tv_jawaban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

</ScrollView>